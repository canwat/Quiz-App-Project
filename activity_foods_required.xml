<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    >
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/fruits_food"
            android:fontFamily="cursive"
            android:textSize="30dp"
            android:layout_marginLeft="8dp"
            android:textColor="#B388"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="129dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/apples" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="95dp"
                android:textSize="15sp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="90dp"
                android:text="@string/apps"
                android:textColor="#FFFF" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="121dp"
                android:layout_height="500dp"
                android:layout_marginLeft="8dp"
                android:src="@drawable/carrots" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/carrots"
                android:textSize="15sp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:textColor="#FFFF"
                android:layout_marginTop="200dp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >

            <ImageView
                android:layout_width="127dp"
                android:layout_height="740dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/cheese"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/cheese"
                android:textSize="15dp"
                android:layout_marginTop="322dp"
                android:layout_marginStart="4dp"
                android:layout_marginLeft="4dp"
                android:textColor="#FFF"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:layout_width="131dp"
                android:layout_height="930dp"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/greens" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dp"
                android:layout_marginStart="4dp"
                android:layout_marginTop="428dp"
                android:text="@string/greens"
                android:textColor="#FFF"
                android:textSize="12sp" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

        <Button
            android:id="@+id/home"
            android:layout_width="183dp"
            android:layout_height="wrap_content"
            android:text="@string/start"
            android:textSize="25sp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="560dp"
            />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>
</ScrollView>
