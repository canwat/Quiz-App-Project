<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/teeth"
    >
    <android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ds"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#006"
                android:layout_marginTop="8dp"
                android:layout_marginRight="4dp"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:background="#BBDEF8"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textColor="#000"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/ff"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fg"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textSize="15sp"
                android:textColor="#1A237E"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textColor="#000"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/paste"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rd"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textSize="15sp"
                android:textColor="#1A237E"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textColor="#000"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/bt"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bd"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textSize="15sp"
                android:textColor="#1A237E"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textColor="#000"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/floss"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fd"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textSize="15sp"
                android:textColor="#1A237E"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textColor="#000"
                android:layout_marginStart="8dp"
                android:layout_marginTop="4dp"
                android:text="@string/limit"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/limits"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="4dp"
                android:textSize="15sp"
                android:textColor="#1A237E"
                android:layout_marginStart="8dp"
                android:textStyle="bold"
                />

            <Button
                android:id="@+id/home"
                android:layout_width="183dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginStart="100dp"
                android:textSize="25sp"
                android:text="@string/start"
                android:layout_marginBottom="8dp"
                />

        </LinearLayout>


    </android.support.constraint.ConstraintLayout>
</ScrollView>
