<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="match_parent">

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:context=".MainActivity"
            android:background="@drawable/cheese"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/health_text_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#0288D1"
                android:fontFamily="casual"
                android:textStyle="bold"
                android:paddingLeft="10dp"
                android:text="@string/tt"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <RadioGroup
                android:id="@+id/rg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/twice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/td" />
                <RadioButton
                    android:id="@+id/each"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/tad" />

                <RadioButton
                    android:id="@+id/when"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/wy" />

                <RadioButton
                    android:id="@+id/ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/ip" />
            </RadioGroup>
            <TextView
                android:id="@+id/view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#0288D1"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:paddingLeft="10dp"
                android:text="@string/qz2"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <RadioGroup
                android:id="@+id/rg2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/tt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/acc" />
                <RadioButton
                    android:id="@+id/self"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/si" />

                <RadioButton
                    android:id="@+id/eat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/eh" />

                <RadioButton
                    android:id="@+id/smoke"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/sc" />
            </RadioGroup>

                        <TextView
                android:id="@+id/viw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#0288D1"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:paddingLeft="10dp"
                android:text="@string/pt"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <RadioGroup
                android:id="@+id/rg4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:id="@+id/tT"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t8" />
                <RadioButton
                    android:id="@+id/ts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/t6" />

                <RadioButton
                    android:id="@+id/Ts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/T6" />

                <RadioButton
                    android:id="@+id/correct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/T2" />
            </RadioGroup>
            <TextView
                android:id="@+id/viw2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:background="#0288D1"
                android:textStyle="bold"
                android:fontFamily="casual"
                android:paddingLeft="10dp"
                android:text="@string/qz4"
                android:textAllCaps="true"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />
            <CheckBox
                android:id="@+id/dry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dm"
                />

            <CheckBox
                android:id="@+id/diet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dt"
                />

            <CheckBox
                android:id="@+id/hormone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Hm"
                />

            <CheckBox
                android:id="@+id/non"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/Na"
                />

            <Button
                android:id="@+id/submit_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="0dp"
                android:text="@string/sb"
                android:onClick="submitAnswer"
                />


        </LinearLayout>
        </LinearLayout>




</ScrollView>
